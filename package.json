    "@typescript-eslint/parser": "^2.23.0",
    "cross-var": "^1.1.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "git-describe": "^4.0.4",
    "html-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "read-pkg": "^5.2.0",
    "replace-in-file": "^5.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
